@model IEnumerable<SMStudent.Database.TuisionFeeTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="float-md-right">
    @Html.ActionLink("Add New Tuision Fee", "Create", new { id = Session["ID"] }, new { @class = "btn btn-primary" })
</div>
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tuision Fee List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

                <div class="row">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Student Name
                                </th>
                                <th>
                                    Session
                                </th>
                                <th>
                                    Class
                                </th>
                                <th>
                                    Group
                                </th>
                                <th>
                                    Fee Month
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Amount
                                </th>
                                <th>
                                    Submit Date
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Last Updated
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StudentTable.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SessionTable.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClassTable.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DivisionTable.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FeesMonth)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SubmissionDate)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EditDate)
                                </td>
                                <td class="btn-group">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info" }) 

                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

